<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="w-full h-[100%] bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a class="text-blue-500" href="/">Back to home</a>
        </div>
        
        <h1 class="tracking-tighter text-3xl mb-3 mt-10">ALL USERS</h1>

        <!-- Users container -->
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length > 0){ %> <!-- Changed 'user.length' to 'users.length' -->

                <% users.forEach(function(user){ %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-72 rounded-lg bg-zinc-500 overflow-hidden">
                            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="ERROR">
                        </div>
                        <h3 class="text-xl tracking-tighter mb-3"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex gap-5 mt-10">
                            <a class="text-zinc-300" href="/edit/<%= user._id%>">Edit user</a>
                            <a class="text-red-500" href="/delete/<%= user._id %>">Delete user</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %> <!-- Corrected else block syntax -->
                <h3 class="text-zinc-500">No users yet</h3>
            <% } %>
          
        </div>
    </div>
</body>
</html>

